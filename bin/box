#!/bin/bash

start_time=$(date +%s.%3N)

for f in /opt/box/libs/* ; do source $f; done
export PATH+=':/opt/box/bin'

if [ -n "${DEBUG}" ] ; then notice "debug mode on" ; fi 

shift $(($OPTIND-1))
CMD=${1} && shift 1

debug command=$CMD
/opt/box/scripts/${CMD}.sh $@

end_time=$(date +%s.%3N)
debug "$(echo $end_time - $start_time | bc)s"